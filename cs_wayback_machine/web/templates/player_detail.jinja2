{% extends "base.jinja2" %}
{% block title %}{{ data.player_nickname }}{% endblock %}
{% block body %}
    <main class="container">
    <div role="group">
        <h1>
            <img src="{{ data.flag_url }}"
             alt="{{ data.country }} flag"
             width="32px"
             title="{{ data.country }}"
             class="flag">
            {{ data.player_nickname }}
            {% if data.liquipedia_url %}
            <sup><a class="secondary extra-small" href="{{ data.liquipedia_url }}">liquipedia</a></sup>
            {% endif %}
        </h1>
    </div>
        <div class="grid-4x">
            {% for team in data.teams %}
                <article>
                    <header>{{ team.team_id }}</header>
                    <p><small>Position: {{ team.position }}</small></p>
                    <p><small>Join Date: {{ player_date(team.join_date, team.join_date_raw) }}</small></p>
                    <p><small>Inactive Date: {{ player_date(team.inactive_date, team.inactive_date_raw) }}</small></p>
                    <p><small>Leave Date: {{ player_date(team.leave_date, team.leave_date_raw) }}</small></p>
                    <p><a class="contrast" href="{{ team_link(team.team_id) }}">Go to Team Page</a></p>
                </article>
            {% endfor %}
        </div>
    </main>
{% endblock %}
